        <!-- Chao -->
        <node id="chao">
            <material id="chaoMaterial" />

            <texture id="text_chao">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <scale sx="10.0" sy="1.0" sz="10.0" />
                <rotation axis="x" angle="-90" />
                <rotation axis="z" angle ="-90" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="0.0" y1="0.0" x2="1.0" y2="1.0"/>
            </descendants>
        </node>

        <node id="cube">
            <material id="null" />

            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <scale sx="0.35" sy="0.35" sz="0.35" />
            </transformations>

            <descendants>
                <noderef id="facecubo_tras" />
                <noderef id="facecubo_frente" />
                <noderef id="facecubo_esquerda" />
                <noderef id="facecubo_direita" />
                <noderef id="facecubo_cima" />
