            </transformations>

            <descendants>
                <leaf type="torus" inner="0.15" outer="0.4" slices="16" loops="48" /> 
            </descendants>
        </node>

        <!-- Paredes -->
        <node id="paredes">
            <material id="wallsMaterial" />

            <texture id="clear" />

            <transformations>

            </transformations>

            <descendants>
                <noderef id="parede1" />
                <noderef id="parede2" />
