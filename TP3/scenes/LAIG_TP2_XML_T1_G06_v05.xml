<lsf>
    <initials>
        <reference length="2" />
        <!-- axis length; "0" means no axis displayed -->
        <root id="quarto" />
        <!-- identifier of root node of the scene graph; this node -->
        <!-- must be defined in one of the following NODE declarations -->
    </initials>
    <views default="defaultCamera">
        <!-- at least one of the following type of cameras must be declared -->
        <perspective id="defaultCamera" near="0.3" far="300" angle="40.0">
            <from x="-8" y="5" z="10" />
            <to x="5" y="0" z="5" />
        </perspective>
        <perspective id="fromInside" near="0.3" far="300" angle="75.0">
            <from x="5" y="1" z="1" />
            <to x="5" y="1" z="5" />
        </perspective>
        <perspective id="upView" near="0.3" far="300" angle="30.0">
            <from x="0" y="15" z="0" />
            <to x="5" y="0" z="5" />
        </perspective>
        <perspective id="firstPlayerView" near="1.0" far="200" angle="45.0">
            <from x="0.0" y="3" z="5" />
            <to x="10.0" y="1" z="5" />
        </perspective>
        <perspective id="secondPlayerView" near="1.0" far="200" angle="45.0">
            <from x="10.0" y="3" z="5" />
            <to x="0.5" y="1" z="5" />
        </perspective>
    </views>

    <illumination>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />           <!-- global ambient -->
        <background r="0.1" g="0.1" b="0.0" a="1.0" />        <!-- background color -->
    </illumination>


    <lights>
        <!-- NOTE: this block "light" must be repeated as necessary with different "id". At least one light should be present, and a maximum of eight lights is accepted. -->
        <light id="demoLight">            <!-- light identifier -->
            <enable value="1" />
            <!-- enable/disable -->
            <position x="1" y="2" z="2" w="1" /><!-- light position; w=1: point light; w=0: directional light -->
            <ambient r="0" g="0" b="0" a="1.0" />                   <!-- ambient component -->
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />             <!-- diffuse component -->
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />            <!-- specular component -->
        </light>
        
        <light id="presente">            <!-- Light that imitates the Christmas Tree top star -->
            <enable value="1" />
            <!-- enable/disable -->
            <position x="5" y="0.25" z="2" w="1.0" /><!-- light position; w=1: point light; w=0: directional light -->
            <ambient r="0" g="0" b="0" a="1.0" />                   <!-- ambient component -->
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />             <!-- diffuse component -->
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />            <!-- specular component -->
        </light>
        <light id="luz_quadro">            <!-- Light that imitates the Christmas Tree top star -->
            <enable value="1" />
            <!-- enable/disable -->
            <position x="8" y="2.1" z="5" w="1.0" /><!-- light position; w=1: point light; w=0: directional light -->
            <ambient r="0.25" g="0.25" b="0.25" a="1.0" />                   <!-- ambient component -->
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />             <!-- diffuse component -->
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />            <!-- specular component -->
        </light>
    </lights>


    <textures>
        <!-- NOTE: this block "TEXTURE" must be repeated as necessary with different "id" -->
        <texture id="text_quadro1" path="./scenes/images/quadro1.jpg" />
        <texture id="text_quadro2" path="./scenes/images/quadro2.jpg" />
        <texture id="text_donut" path="./scenes/images/donut.jpg" />
        <texture id="text_chao" path="./scenes/images/chao.jpg" />
        <texture id="text_parede" path="./scenes/images/parede.jpg" />
        <texture id="text_mesa" path="./scenes/images/mesa.jpg" />
        <texture id="text_sofa1" path="./scenes/images/sofa1.jpg" />
        <texture id="text_sofa2" path="./scenes/images/sofa2.jpg" />
        <texture id="text_sofa_leg" path="./scenes/images/sofa_leg.jpg" />
        <texture id="text_barrel" path="./scenes/images/barrel.jpg" />
    </textures>

    <spritesheets>
        
    </spritesheets>

    <materials>
        <!-- NOTE: the "MATERIAL" block may be repeated as required. Each defined material
         requires a distinct "id". At least one material should be present. -->
        <material id="defaultMaterial">
            <shininess value="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="0.0" g="0.0" b="0.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="paintMaterial">
            <shininess value="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="0.2" g="0.2" b="0.2" a="1.0" />
            <specular r="0.2" g="0.2" b="0.2" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="donutMaterial">
            <shininess value="0.4" />
            <ambient r="0.1" g="0.4" b="0.1" a="1.0" />
            <diffuse r="0.2" g="0.0" b="0.0" a="1.0" />
            <specular r="0.13" g="0.33" b="0.0" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="wallsMaterial">
            <shininess value="0.5" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.13" g="0.1" b="0.1" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="quadroMaterial">
            <shininess value="0.75" />
            <ambient r="0.5" g="0.5" b="0.5" a="1.0" />
            <diffuse r="0.6" g="0.3" b="0.2" a="1.0" />
            <specular r="0.1" g="0.33" b="0.3" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="chaoMaterial">
            <shininess value="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="0.0" g="0.0" b="0.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="mesaMaterial">
            <shininess value="1.0" />
            <ambient r="0.38" g="0.2" b="0.07" a="1.0" />
            <diffuse r="0.38" g="0.2" b="0.07" a="1.0" />
            <specular r="0.38" g="0.2" b="0.07" a="1.0" />
            <emissive r="0.38" g="0.2" b="0.07" a="1.0" />
        </material>
        <material id="sofaMaterial">
            <shininess value="1.0" />
            <ambient r="0.7" g="0.7" b="0.7" a="1.0" />
            <diffuse r="0.1" g="0.1" b="0.1" a="1.0" />
            <specular r="0.13" g="0.13" b="0.13" a="1.0" />
            <emissive r="0.5" g="0.5" b="0.5" a="1.0" />
        </material>
    </materials>

    <nodes>
        <!-- Root -->
        <node id="quarto">            <!-- defines one intermediate node; may be repeated as necessary -->
            <!-- next two lines are mandatory -->
            <material id="defaultMaterial" /><!-- this superimposes the material received from parent node id="null" maintains material from parent node -->

            <texture id="clear"><!-- declared texture superimposes the texture received from parent node id="null" maintains texture from parent node id="clear" clears texture declaration received from parent node -->
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>

            </transformations>

            <!-- declaring descendants, at least one node or one leaf must be present
             descendants may be mixed, nodes and leafs -->
            <descendants>
                <noderef id="donuts" />
                <noderef id="paredes" />
                <noderef id="quadros" />
                <noderef id="chao" />
                <noderef id="mesas" />
                <noderef id="sofas" />
                <noderef id="text" />
                <noderef id="barrel" />
                <noderef id="auxBoards" />
                
                <!-- "ss" is the identifier of a node or of leaf; -->
                <!-- may be repeated as necessary. It can refer an -->
                <!-- identifier of another node, before or later defined in the file. -->
                <!-- next lines define nodes of type leaf; may be repeated, in any order, as necessary -->
                <!-- 2D coordinates on the XY plane for left-top and right-bottom vertices. -->
            </descendants>
        </node>

        <node id="auxBoards">
            <material id="sofaMaterial" />

            <texture id="text_chao">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                
            </transformations>

            <descendants>
                <noderef id="auxBoard1" />
            </descendants>
        </node>

        <node id="auxBoard1">
            <material id="sofaMaterial" />

            <texture id="text_chao">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="5" y="0.85" z="2.7" />
                <scale sx="6" sy="0.05" sz="3.0" />
            </transformations>

            <descendants>
                <noderef id="cube" />
            </descendants>
        </node>
        
         <node id="barrel">
            <material id="null" />

            <texture id="text_barrel">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="9.5" y="0.0" z="0.5" />
                <rotation axis="x" angle="-90" /> 
            </transformations>

            <descendants>
                <leaf type="defbarrel" base="0.3" middle="0.4" height="1.0" slices="5" stacks="5" />
            </descendants>
        </node>

        <node id="text">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="5.0" y="2.2" z="0.01" />
            </transformations>

            <descendants>
                <leaf type="spritetext" text="Merry Christmas!" />
            </descendants>
        </node>

        <!-- Quadro -->

        <node id="quadros">            <!-- defines one intermediate node; may be repeated as necessary -->
            <!-- next two lines are mandatory -->
            <material id="quadroMaterial" /><!-- this superimposes the material received from parent node id="null" maintains material from parent node -->

            <texture id="clear"><!-- declared texture superimposes the texture received from parent node id="null" maintains texture from parent node id="clear" clears texture declaration received from parent node -->
                <amplification afs="1.0" aft="1.0" /><!-- for primitives = dx/afs, dy/aft -->
            </texture>

            <!-- geom. transf. are optional and may be repeated, in any order, as necessary: -->
            <transformations>

            </transformations>

            <!-- declaring descendants, at least one node or one leaf must be present
             descendants may be mixed, nodes and leafs -->
            <descendants>
                <noderef id="quadro1" />
                <noderef id="quadro2" />
                <!-- x y z coordinates of each vertex -->
            </descendants>
        </node>

        <node id="quadro1">

            <material id="null" />

            <texture id="text_quadro1">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="9.9" y="1.0" z="2.0" />
                <scale sx="1.0" sy="1.5" sz="2.0" />
                <rotation axis="y" angle="-90" /> 
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="0.0" y1="0.0" x2="1.0" y2="1.0"/>
            </descendants>
        </node>

        <node id="quadro2">

            <material id="null" />

            <texture id="text_quadro2">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="9.9" y="1.0" z="6.0" />
                <scale sx="1.0" sy="1.5" sz="2.0" />
                <rotation axis="y" angle="-90" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="0.0" y1="0.0" x2="1.0" y2="1.0"/>
            </descendants>
        </node>

        <!-- DONUT -->
        <node id="donuts">
            <material id="donutMaterial" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                
            </transformations>

            <descendants>
                <noderef id="donut1" />
                <noderef id="donut2" />
                <noderef id="donut3" />
            </descendants>
        </node>

        <node id="donut1">
            <material id="null" />

            <texture id="text_donut">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="2.0" y="1.5" z="0.2" />
            </transformations>

            <descendants>
                <leaf type="torus" inner="0.15" outer="0.4" slices="16" loops="48" /> 
            </descendants>
        </node>

        <node id="donut2">
            <material id="paintMaterial" />

            <texture id="text_quadro2">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="5.0" y="1.5" z="0.01" />
                <rotation axis="x" angle="90" />
                <scale sx="1.5" sy="1.0" sz="1.25" />
                
                <!-- <translation x="5.0" y="1.5" z="0.2" /> -->
            </transformations>

            <descendants>
                <leaf type="plane" npartsU="1" npartsV="1" />
            </descendants>
        </node>

        <node id="donut3">
