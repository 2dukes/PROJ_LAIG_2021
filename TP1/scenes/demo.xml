<lsf>
    <initials>
        <reference length="2" />
        <!-- axis length; "0" means no axis displayed -->
        <root id="quarto" />
        <!-- identifier of root node of the scene graph; this node -->
        <!-- must be defined in one of the following NODE declarations -->
    </initials>
    <views default="defaultCamera">
        <!-- at least one of the following type of cameras must be declared -->
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
        <ortho id="demoOrtho" near="0.2" far="100" left="-0.2" right="0.2" top="0.2" bottom="-0.2">
            <from x="5" y="0" z="10" />
            <to x="5" y="0" z="0" />
            <up x="0" y="1" z="0" /><!-- optional, default 0,1,0 -->
        </ortho>
    </views>

    <illumination>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />           <!-- global ambient -->
        <background r="0.1" g="0.1" b="0.0" a="1.0" />        <!-- background color -->
    </illumination>


    <lights>
        <!-- NOTE: this block "light" must be repeated as necessary with different "id". At least one light should be present, and a maximum of eight lights is accepted. -->
        <light id="demoLight">            <!-- light identifier -->
            <enable value="1" />
            <!-- enable/disable -->
            <position x="10" y="12" z="9.5" w="1.0" /><!-- light position; w=1: point light; w=0: directional light -->
            <ambient r="0" g="0" b="0" a="1.0" />                   <!-- ambient component -->
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />             <!-- diffuse component -->
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />            <!-- specular component -->
        </light>
        <light id="luz_estrela">            <!-- Light that imitates the Christmas Tree top star -->
            <enable value="1" />
            <!-- enable/disable -->
            <position x="5" y="2.0" z="5" w="1.0" /><!-- light position; w=1: point light; w=0: directional light -->
            <ambient r="0" g="0" b="0" a="1.0" />                   <!-- ambient component -->
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />             <!-- diffuse component -->
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />            <!-- specular component -->
        </light>
        <light id="luz_tronco">            <!-- Light that imitates the Christmas Tree top star -->
            <enable value="0" />
            <!-- enable/disable -->
            <position x="5" y="0.25" z="7" w="1.0" /><!-- light position; w=1: point light; w=0: directional light -->
            <ambient r="0" g="0" b="0" a="1.0" />                   <!-- ambient component -->
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />             <!-- diffuse component -->
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />            <!-- specular component -->
        </light>
        <light id="luz_quadro">            <!-- Light that imitates the Christmas Tree top star -->
            <enable value="0" />
            <!-- enable/disable -->
            <position x="4" y="2.1" z="5" w="1.0" /><!-- light position; w=1: point light; w=0: directional light -->
            <ambient r="0" g="0" b="0" a="1.0" />                   <!-- ambient component -->
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />             <!-- diffuse component -->
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />            <!-- specular component -->
        </light>
    </lights>


    <textures>
        <!-- NOTE: this block "TEXTURE" must be repeated as necessary with different "id" -->
        <texture id="text_pinheiro" path="./scenes/images/pinheiro.jpg" />
        <texture id="text_tronco" path="./scenes/images/tronco.jpg" />
        <texture id="text_quadro" path="./scenes/images/quadro.jpg" />
        <texture id="text_donut" path="./scenes/images/donut.jpg" />
        <texture id="text_chao" path="./scenes/images/chao.jpg" />
        <texture id="text_parede" path="./scenes/images/parede.jpg" />
        <texture id="text_presente" path="./scenes/images/presente.jpg" />
        <texture id="text_bola_pinheiro" path="./scenes/images/bola_pinheiro.jpg" />
    </textures>


    <materials>
        <!-- NOTE: the "MATERIAL" block may be repeated as required. Each defined material
         requires a distinct "id". At least one material should be present. -->
        <material id="defaultMaterial">
            <shininess value="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="donutMaterial">
            <shininess value="0.4" />
            <ambient r="0.1" g="0.4" b="0.1" a="1.0" />
            <diffuse r="0.2" g="0.0" b="0.0" a="1.0" />
            <specular r="0.13" g="0.33" b="0.0" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="wallsMaterial">
            <shininess value="0.5" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.13" g="0.1" b="0.1" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="quadroMaterial">
            <shininess value="0.75" />
            <ambient r="0.5" g="0.5" b="0.5" a="1.0" />
            <diffuse r="0.6" g="0.3" b="0.2" a="1.0" />
            <specular r="0.1" g="0.33" b="0.3" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="chaoMaterial">
            <shininess value="0.7" />
            <ambient r="0.1" g="0.4" b="0.1" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.13" g="0.33" b="0.0" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="arvore_natalMaterial">
            <shininess value="1.0" />
            <ambient r="0.84" g="0.72" b="0.4" a="1.0" />
            <diffuse r="0.2" g="0.3" b="0.4" a="1.0" />
            <specular r="0.13" g="0.33" b="0.0" a="1.0" />
            <emissive r="1.0" g="0.7" b="0.8" a="1.0" />
        </material>

        <!-- PERGUNTAR À PROF -->
    </materials>

    <nodes>
        <!-- Root -->
        <node id="quarto">            <!-- defines one intermediate node; may be repeated as necessary -->
            <!-- next two lines are mandatory -->
            <material id="defaultMaterial" /><!-- this superimposes the material received from parent node id="null" maintains material from parent node -->

            <texture id="null"><!-- declared texture superimposes the texture received from parent node id="null" maintains texture from parent node id="clear" clears texture declaration received from parent node -->
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>

            </transformations>

            <!-- declaring descendants, at least one node or one leaf must be present
             descendants may be mixed, nodes and leafs -->
            <descendants>
                <noderef id="donut" />
                <noderef id="paredes" />
                <noderef id="quadro" />
                <noderef id="chao" />
                <noderef id="arvore_natal" />
                <noderef id="presentes" />
                <!-- "ss" is the identifier of a node or of leaf; -->
                <!-- may be repeated as necessary. It can refer an -->
                <!-- identifier of another node, before or later defined in the file. -->
                <!-- next lines define nodes of type leaf; may be repeated, in any order, as necessary -->
                <!-- 2D coordinates on the XY plane for left-top and right-bottom vertices. -->
            </descendants>
        </node>

        <!-- Quadro -->

        <node id="quadro">            <!-- defines one intermediate node; may be repeated as necessary -->
            <!-- next two lines are mandatory -->
            <material id="quadroMaterial" /><!-- this superimposes the material received from parent node id="null" maintains material from parent node -->

            <texture id="text_quadro"><!-- declared texture superimposes the texture received from parent node id="null" maintains texture from parent node id="clear" clears texture declaration received from parent node -->
                <amplification afs="2.0" aft="1.0" /><!-- for primitives = dx/afs, dy/aft -->
            </texture>

            <!-- geom. transf. are optional and may be repeated, in any order, as necessary: -->
            <transformations>
                <translation x="5.0" y="1.0" z="4.0" />
                <scale sx="1.0" sy="1.5" sz="2.0" />
                <rotation axis="y" angle="-90" />
            </transformations>

            <!-- declaring descendants, at least one node or one leaf must be present
             descendants may be mixed, nodes and leafs -->
            <descendants>
                <leaf type="rectangle" x1="0.0" y1="0.0" x2="1.0" y2="1.0"/>
                <!-- x y z coordinates of each vertex -->
            </descendants>
        </node>

        <!-- DONUT -->
        <node id="donut">
            <material id="donutMaterial" />

            <texture id="text_donut">
                <amplification afs="2.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="2.5" y="1.5" z="0.0" />
            </transformations>

            <descendants>
                <leaf type="torus" inner="0.15" outer="0.3" slices="16" loops="48" /> 
            </descendants>
        </node>

        <!-- Paredes -->
        <node id="paredes">
            <material id="wallsMaterial" />

            <texture id="clear" />

            <transformations>

            </transformations>

            <descendants>
                <noderef id="parede1" />
                <noderef id="parede2" />
            </descendants>
        </node>

        <node id="parede1">
            <material id="null" />

            <texture id="text_parede">
                <amplification afs="5.0" aft="3.0" />
            </texture>

            <transformations>
                <scale sx="5.0" sy="3.0" sz="1.0" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="0.0" y1="0.0" x2="1.0" y2="1.0"/>
            </descendants>
        </node>
        
        <node id="parede2">
            <material id="null" />

            <texture id="text_parede">
                <amplification afs="5.0" aft="3.0" />
            </texture>

            <transformations>
                <translation x="5.0" y="0.0" z="0.0" />
                <scale sx="1.0" sy="3.0" sz="5.0" />
                <rotation axis="y" angle="-90" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="0.0" y1="0.0" x2="1.0" y2="1.0"/>
            </descendants>
        </node>

        <!-- Chao -->
        <node id="chao">
            <material id="chaoMaterial" />

            <texture id="text_chao">
                <amplification afs="10.0" aft="10.0" />
            </texture>

            <transformations>
                <scale sx="5.0" sy="1.0" sz="5.0" />
                <rotation axis="x" angle="-90" />
                <rotation axis="z" angle ="-90" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="0.0" y1="0.0" x2="1.0" y2="1.0"/>
            </descendants>
        </node>

        <!-- Presentes -->
        <node id="presentes">
            <material id="arvore_natalMaterial" />

            <texture id="clear" />

            <transformations>

            </transformations>

            <descendants>
                <noderef id="presente1" />
                <noderef id="presente2" />
            </descendants>
        </node>

        <node id="presente1">
            <material id="null"/>

            <texture id="text_presente">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="1.0" y="0.0" z="2.0" />
            </transformations>

            <descendants>
                <noderef id="cube" />
            </descendants>
        </node>

        <node id="presente2">
            <material id="null"/>

            <texture id="text_presente">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="3.0" y="0.0" z="3.0" />
            </transformations>

            <descendants>
                <noderef id="cube" />
            </descendants>
        </node>
        
        <node id="cube">
            <material id="null" />

            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <scale sx="0.4" sy="0.4" sz="0.4" />
            </transformations>

            <descendants>
                <noderef id="facecubo_tras" />
                <noderef id="facecubo_frente" />
                <noderef id="facecubo_esquerda" />
                <noderef id="facecubo_direita" />
                <noderef id="facecubo_cima" />
                <noderef id="facecubo_baixo" />
            </descendants>
        </node>

        <!-- Faces do Cubo -->
        <node id="facecubo_tras">
            <material id="null" />

            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="0.0" y="0.0" z="-0.5" />
                <rotation axis="y" angle="-180" />
                <translation x="-0.5" y="0.0" z="0.0" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="0.0" y1="0.0" x2="1.0" y2="1.0"/>
            </descendants>
        </node>

        <node id="facecubo_frente">
            <material id="null" />

            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="-0.5" y="0.0" z="0.5" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="0.0" y1="0.0" x2="1.0" y2="1.0"/>
            </descendants>
        </node>

        <node id="facecubo_esquerda">
            <material id="null" />

            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="-0.5" y="0.0" z="0.0" />
                <rotation axis="y" angle="-90" />
                <translation x="-0.5" y="0.0" z="0.0" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="0.0" y1="0.0" x2="1.0" y2="1.0"/>
            </descendants>
        </node>

        <node id="facecubo_direita">
            <material id="null" />

            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="0.5" y="0.0" z="0.0" />
                <rotation axis="y" angle="90" />
                <translation x="-0.5" y="0.0" z="0.0" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="0.0" y1="0.0" x2="1.0" y2="1.0"/>
            </descendants>
        </node>

        <node id="facecubo_cima">
            <material id="null" />

            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="-0.5" y="1.0" z="0.5" />
                <rotation axis="x" angle="-90" />

            </transformations>

            <descendants>
                <leaf type="rectangle" x1="0.0" y1="0.0" x2="1.0" y2="1.0"/>
            </descendants>
        </node>

        <node id="facecubo_baixo">
            <material id="null" />

            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="-0.5" y="0.0" z="-0.5" />
                <rotation axis="x" angle="90" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="0.0" y1="0.0" x2="1.0" y2="1.0"/>
            </descendants>
        </node>

        <!-- Christmas Tree -->
        <node id="arvore_natal">
            <material id="arvore_natalMaterial" />

            <texture id="clear" />

            <transformations>

            </transformations>

            <descendants>
                <noderef id="bolas" />
                <noderef id="tronco" />
                <noderef id="copa" />
            </descendants>
        </node>

        <!-- Christmas Tree (Bolas) -->
        <node id="bolas">
            <material id="null" />

            <texture id="text_bola_pinheiro">
                <amplification afs="0.25" aft="0.25" />
            </texture>

            <transformations>

            </transformations>

            <descendants>
                <noderef id="bola1" />
                <noderef id="bola2" />
            </descendants>
        </node>

        <node id="bola1">
            <material id="null" />

            <texture id="null">
                <amplification afs="0.25" aft="0.25" />
            </texture>

            <transformations>
                <translation x="-1.1" y="0.75" z="-5.1" />
            </transformations>

            <descendants>
                <leaf type="sphere" radius="0.125" slices="10" stacks="10"/>
            </descendants>
        </node>

        <node id="bola2">
            <material id="null" />

            <texture id="null">
                <amplification afs="0.25" aft="0.25" />
            </texture>

            <transformations>
                <translation x="4.9" y="0.70" z="4.9" />
            </transformations>

            <descendants>
                <leaf type="sphere" radius="0.125" slices="10" stacks="10"/>
            </descendants>
        </node>

        <!-- Christmas Tree (Tronco) -->
        <node id="tronco">
            <material id="null" />

            <texture id="text_tronco">
                <amplification afs="0.2" aft="0.5" />
            </texture>

            <transformations>
                <translation x="5.0" y="0.0" z="5.0" />
                <rotation axis="x" angle="90" />
            </transformations>

            <descendants>
                <leaf type="cylinder" height="0.5" topRadius="0.05" bottomRadius="0.05" stacks="10" slices="10"/>
            </descendants>
        </node>

        <!-- Christmas Tree (Copa) -->
        <node id="copa">
            <material id="null" />

            <texture id="text_pinheiro">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <!-- TRANSLAÇÃO -->
            </transformations>

            <descendants>
                <noderef id="facecopa_base" />
                <noderef id="facecopa_tras" />
                <noderef id="facecopa_esquerda" />
                <noderef id="facecopa_direita" />
            </descendants>
        </node>

        <node id="facecopa_base"> 
            <material id="null" />

            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <rotation axis="x" angle="90" />                
            </transformations>

            <descendants>
                <leaf type="triangle" x1="1.0" y1="0.0" x2="0.0" y2="1.0" />
            </descendants>
        </node>

        <node id="facecopa_tras"> 
            <material id="null" />

            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <rotation axis="x" angle="45" />                
                <scale sx="1.0" sy="1.5" sz="1.0" />
            </transformations>

            <descendants>
                <leaf type="triangle" x1="1.0" y1="0.0" x2="0.0" y2="1.0" />
            </descendants>
        </node>

        <node id="facecopa_esquerda"> 
            <material id="null" />

            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <rotation axis="z" angle="-45" />                
                <rotation axis="y" angle="-90" />                
                <scale sx="1.0" sy="1.5" sz="1.0" />
            </transformations>

            <descendants>
                <leaf type="triangle" x1="1.0" y1="0.0" x2="0.0" y2="1.0" />
            </descendants>
        </node>

        <node id="facecopa_direita"> 
            <material id="null" />

            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="5.0" y="1.0" z="4.0" /> <!-- Valores não definitivos -->
                <rotation axis="z" angle="45" />                
                <rotation axis="y" angle="90" />                
                <scale sx="1.0" sy="1.5" sz="1.0" />
            </transformations>

            <descendants>
                <leaf type="triangle" x1="1.0" y1="0.0" x2="0.0" y2="1.0" />
            </descendants>
        </node>
    </nodes>
</lsf>